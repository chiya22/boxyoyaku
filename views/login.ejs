<!DOCTYPE html>
<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, user-scalable=yes">
  <head>
    <title>予約システム</title>
    <%- include("./common/stylesheets.ejs") %>
  </head>
</head>

<body>
  <div class="main-container">
    <% if (flashMessages) { %>
      <% if (flashMessages.success) { %>
        <div class="flashes alert">
          <div class="flash success"><%= flashMessages.success %></div>
        </div>
      <% } else if (flashMessages.error) { %>
        <div class="flashes alert">
          <div class="flash error alert-danger"><%= flashMessages.error %></div>
        </div>
      <% } %>
    <% } %>
    <div class="login-header-img">
      <img src="/static/images/building_logo.svg">
    </div>
    <form action="/login" method="post">
      <div class="form-area">
        <div>
          <input class="form-item-style" type="text" name="username" placeholder="ID" autofocus />
        </div>
        <div>
          <input class="form-item-style" type="password" name="password" placeholder="パスワード" />
        </div>
        <div>
          <input class="submit-btn" type="submit" value="ログイン" />
        </div>
        <div class="link-area">
          <a class="link-btn" href="/users/request">新規登録</a>
        </div>
        <div class="link-area">
          <a class="link-btn" href="/users/requestpwd">パスワード忘れ</a>
        </div>
      </div>
    </form>
  </div>
</body>

</html>